# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
max_line_length = 119

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.bat]
indent_style = tab
end_of_line = crlf

[lib/**.js]
indent_style = space
indent_size = 2

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
